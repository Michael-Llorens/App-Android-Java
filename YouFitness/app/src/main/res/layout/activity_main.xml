<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    tools:context=".MainActivity"
    android:background="@drawable/fondo_degradado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="248dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_img_sin_foreground_foreground" />

        <EditText
            android:id="@+id/email"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="261dp"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:text="pepe@gmail.com"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/password"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="261dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/password"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="123456"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="261dp"
            android:layout_height="62dp"
            android:backgroundTint="#3150FF"
            android:text="INICIAR SESIÓN"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="45px"
            app:cornerRadius="20dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnEntrarG"
            android:layout_width="261dp"
            android:layout_height="62dp"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#3150FF"
            android:text="INICIAR con"
            android:textColor="#3150FF"
            android:textSize="45px"
            app:cornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:drawableEnd="@mipmap/logo_g_foreground" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="190dp"
            android:layout_height="31dp"
            android:layout_marginTop="40dp"
            android:text="¿No tienes cuenta?"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="50px" />

        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="188dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:text="REGISTRATE AQUI"
            android:textColor="@color/purple_700"
            android:textSize="40px"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity= "start">

        <include
            layout="@layout/nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>